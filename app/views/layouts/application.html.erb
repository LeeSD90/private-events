<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <h1><% flash.each do |type, msg| %>
      <%= content_tag(:div, msg, class: "alert-#{type}") %>
    <% end %></h1>
    <% if logged_in? then %>
      Logged in as <%= current_user.name %>. <%= link_to "Log Out", logout_path, method: :delete %></br>
      <%= link_to "Create new event", events_new_path %></br>
      <%= link_to "View all events", events_index_path %>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
